{
  "name": "lucidac-gui",
  "description": "Browser based (SPA) configuration and programming utility for LUCIDAC",
  "private": false,
  "version": "0.4.1",
  "type": "module",
  "license": "(MIT OR GPL-2.0-or-later)",
  "author": {
    "name": "Anabrid GmbH",
    "email": "hello@anabrid.com",
    "url": "https://anabrid.com"
  },
  "repository": {
    "type": "git",
    "url": "https://lab.analogparadigm.com/lucidac/software/lucidac-gui"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "release": "release-it"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "push": false,
      "tagName": "v${version}"
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "addUnreleased": true
      }
    }
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tsconfig/svelte": "^5.0.2",
    "@xyflow/svelte": "^0.0.36",
    "marked": "^12.0.1",
    "release-it": "^17.1.1",
    "sass": "^1.70.0",
    "svelte": "^4.2.10",
    "svelte-check": "^3.6.6",
    "svelte-fontawesome": "^0.0.3",
    "svelte-spa-router": "^4.0.1",
    "svelte-writable-derived": "^3.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vite-bundle-visualizer": "^1.1.0"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/svelte-fontawesome": "^0.2.2",
    "bulma": "^0.9.4",
    "uuid": "^9.0.1"
  }
}
